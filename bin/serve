PORT=${PORT:-8000}
PUBLIC=${PUBLIC:-'.'}

has_python3() {
  command -v python3 >/dev/null 2>&1
}

main() {
  cd "$PUBLIC"

  if has_python3; then
      python3 -m http.server "$PORT"
  else
      python -m SimpleHTTPServer "$PORT"
  fi
}

main

